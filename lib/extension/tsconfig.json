{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
