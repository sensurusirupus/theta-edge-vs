{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
